<ScreenManagement>:
    CalculatorScreen:
        name: "calculator"
        id: calculator
        display: data

        GridLayout:
            rows: 7
            padding: 5
            spacing: 5

            BoxLayout:
                TextInput:
                    id: data
                    font_size: 24
                    multiline: False
                    readonly: True
            BoxLayout:
                spacing: 10
                Button:
                    text: "HIST"
                    on_press: root.go_to('history')
                Button:
                    text: "("
                    on_press: data.text += self.text
                Button:
                    text: ")"
                    on_press: data.text += self.text
                Button:
                    text: "DEL"
                    on_press: data.text = data.text[:-1]
            BoxLayout:
                spacing: 10
                Button:
                    text: "7"
                    on_press: data.text += self.text
                Button:
                    text: "8"
                    on_press: data.text += self.text
                Button:
                    text: "9"
                    on_press: data.text += self.text
                Button:
                    text: "/"
                    on_press: data.text += self.text
            BoxLayout:
                spacing: 10
                Button:
                    text: "4"
                    on_press: data.text += self.text
                Button:
                    text: "5"
                    on_press: data.text += self.text
                Button:
                    text: "6"
                    on_press: data.text += self.text
                Button:
                    text: "*"
                    on_press: data.text += self.text
            BoxLayout:
                spacing: 10
                Button:
                    text: "1"
                    on_press: data.text += self.text
                Button:
                    text: "2"
                    on_press: data.text += self.text
                Button:
                    text: "3"
                    on_press: data.text += self.text
                Button:
                    text: "-"
                    on_press: data.text += self.text
            BoxLayout:
                spacing: 10
                Button:
                    text: "AC"
                    on_press: data.text = ""
                Button:
                    text: "0"
                    on_press: data.text += self.text
                Button:
                    text: "="
                    on_press: calculator.calculate(data.text)
                Button:
                    text: "+"
                    on_press: data.text += self.text

    HistoryScreen:
        name: "history"
        id: history
        list_view: list

        GridLayout:
            rows: 2
            padding: 5
            spacing: 5

            BoxLayout:
                spacing: 10
                height: 48

                Button:
                    text: "Voltar"
                    on_press: root.go_to('calculator')
                Button:
                    text: "Limpar"
                    on_press: history.clear()
            BoxLayout:
                Label:
                    id: list
